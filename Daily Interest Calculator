<body>
   <div class="container">
       <h1>Interest Calculator</h1>
       <p class="subtitle">Convert daily interest to annualized rate</p>
       
       <div class="input-group">
           <label for="dailyRate">Daily Interest Rate</label>
           <div class="input-wrapper">
               <input
                   type="number"
                   id="dailyRate"
                   placeholder="0.05"
                   step="0.001"
                   value="0.05">
               <span class="percent-sign">%</span>
           </div>
       </div>
       
       <div class="result-box">
           <div class="result-label">Annualized Interest Rate</div>
           <div class="result-value" id="annualizedRate">19.97%</div>
           <div class="result-detail">Based on daily compounding over 365 days</div>
       </div>
       
       <div class="info">
           <strong>Formula:</strong> (1 + daily rate)³⁶⁵ - 1<br>
           This accounts for compound interest where returns build on previous returns.
       </div>
   </div>
   
   <script>
       const dailyInput = document.getElementById('dailyRate');
       const resultDisplay = document.getElementById('annualizedRate');
       
       function calculateAnnualized() {
           const dailyRate = parseFloat(dailyInput.value) || 0;
           const dailyDecimal = dailyRate / 100;
           const annualized = (Math.pow(1 + dailyDecimal, 365) - 1) * 100;
           
           resultDisplay.textContent = annualized.toFixed(2) + '%';
       }
       
       dailyInput.addEventListener('input', calculateAnnualized);
       
       // Calculate on page load
       calculateAnnualized();
   </script>
